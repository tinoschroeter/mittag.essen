pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                uname -a
                printenv
                hostname
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                uname -a
                printenv
                hostname
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                uname -a
                printenv
                hostname
            }
        }
    }
}
