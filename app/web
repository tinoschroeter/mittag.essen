<script>
if (location.protocol !== 'https:') {
    location.replace(`https:${location.href.substring(location.protocol.length)}`);
}
let count = 0;
let text = "$ curl mittag.tino.sh";
let blink = "_"
let addText = [];
let curl = document.getElementById("curl");
let bild = document.getElementById("image");
let rezept = document.getElementById("rezept");

let search = window.location.pathname.replace("/sen/", "");

function typeText() {
  addText.push(text[count])
  type = addText.join('');
  curl.innerText = type + "_";
  count++
  if (count -1 > text.length) {
    bild.style.display = "block";
    curl.onmousedown = function (event) { clearInterval(inter); }
    if (count % 4 ==  0) {
      curl.innerText = text;    
    } else if (count > 666) {
        bild.style.display = "none"; 
        addText = [];
        count = 0;
    } else {
        curl.innerText = text + blink;
    }
  }
}

let inter = setInterval(function() {
    typeText();
}, 100);

if (search.length > 4) {
  fetch('/data.json', { 
    method: 'GET'
  })
  .then(function(response) { return response.json(); })
  .then(function(json) {
	let data = json[search];
        document.getElementById("rezeptTitel").innerText = search.replace(/_/g, " ").toUpperCase();
	    let ul = document.getElementById("rezeptZutaten");
	    for(let i = 0; i<data.Zutaten.length; i++) {
            let li = document.createElement("li");
            li.appendChild(document.createTextNode(data.Zutaten[i]));
            ul.appendChild(li);
	}
	document.getElementById("rezeptZubereitung").innerText = data.Zubereitung;
  });
  rezept.style.display = "block";
  curl.style.display = "none";
  clearInterval(inter);
}
</script>
